{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=DocHub.db"
  },
  "Database": {
    "AutoMigrate": true,
    "AutoSeed": true
  },
  "Email": {
    "SendGrid": {
      "ApiKey": "",
      "FromEmail": "",
      "FromName": "Your Company HR"
    },
    "DefaultProvider": "SendGrid",
    "RetryAttempts": 3,
    "RetryDelaySeconds": 30,
    "MaxAttachmentSizeMB": 25,
    "EnableDeliveryTracking": true,
    "EnableAnalytics": true
  },
  "Syncfusion": {
    "LicenseKey": "Ngo9BigBOggjHTQxAR8/V1JEaF5cXmRCf1FpRmJGdld5fUVHYVZUTXxaS00DNHVRdkdmWXdccnRUQmlcWENyW0BWYEk="
  },
  "JWT": {
    "SecretKey": "your-super-secret-jwt-key-here-make-it-long-and-secure",
    "Issuer": "DocHub",
    "Audience": "DocHubUsers",
    "ExpiryInMinutes": 1440
  },
  "FileStorage": {
    "BasePath": "Storage/Files",
    "ThumbnailPath": "Storage/Thumbnails",
    "TempPath": "Storage/Temp",
    "MaxFileSizeInMB": 100,
    "AllowedExtensions": [".pdf", ".doc", ".docx", ".xls", ".xlsx", ".txt", ".csv", ".zip", ".rar"],
    "UploadPath": "wwwroot/uploads",
    "EnableVirusScanning": true,
    "EnableCorruptionCheck": true
  },
  "RateLimiting": {
    "MaxRequestsPerWindow": 100,
    "WindowMinutes": 1,
    "ExemptEndpoints": ["/api/test", "/api/health"]
  }
}
