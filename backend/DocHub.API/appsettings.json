{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=DocHub.db"
  },
  "Database": {
    "AutoMigrate": true,
    "AutoSeed": true
  },
  "SendGrid": {
    "ApiKey": "your-sendgrid-api-key-here",
    "FromEmail": "noreply@dochub.com",
    "FromName": "DocHub System"
  },
  "Syncfusion": {
    "LicenseKey": "your-syncfusion-license-key-here"
  },
  "JWT": {
    "SecretKey": "your-super-secret-jwt-key-here-make-it-long-and-secure",
    "Issuer": "DocHub",
    "Audience": "DocHubUsers",
    "ExpiryInMinutes": 1440
  },
  "FileStorage": {
    "MaxFileSizeInMB": 50,
    "AllowedExtensions": [".xlsx", ".xls", ".docx", ".doc", ".pdf"],
    "UploadPath": "wwwroot/uploads"
  }
}
